<h1>Edit {{course.title}}</h1>

<form action='/courses/edit' method="POST" class="course-form">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
    <label for="title">Name of course</label>
    <span class="helper-text" data-error="Type name of course"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="text" class="validate" value="{{course.price}}" required min="1">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Type your price"></span>
  </div>

  <div class="input-field">
    <input id="img" type="text" name="img" class="validate" value="{{course.img}}" required>
    <label for="img">image URL</label>
    <span class="helper-text" data-error="Type image url"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button type="submit" class="btn btn-primary edit">Edit course</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <input type="hidden" name="id" value="{{ course.id }}">
  <button class="btn red">Delete course</button>
</form>