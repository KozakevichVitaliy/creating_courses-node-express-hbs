<h1>Add new courses</h1>

{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}

<form action='/add' method="POST" novalidate>
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" value="{{data.title}}" required>
    <label for="title">Name of course</label>
    <span class="helper-text" data-error="Type name of course"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="text" class="validate" value="{{data.price}}" required min="1">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Type your price"></span>
  </div>

  <div class="input-field">
    <input id="img" type="text" name="img" class="validate" value="{{data.img}}" required>
    <label for="img">image URL</label>
    <span class="helper-text" data-error="Type image url"></span>
  </div>

   <input type="hidden" name="_csrf" value="{{csrf}}">

  <button class="btn btn-primary">Add course</button>
</form>